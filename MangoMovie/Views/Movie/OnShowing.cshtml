@model IEnumerable<MangoMovie.Model.Subject>
@{
    ViewBag.Title = "OnShowing";
}

<h2>@ViewBag.ResultTitle</h2>


<!-- general -->
<div class="general">
    <h4 class="latest-text w3_latest_text">JasonMeng</h4>
    <div class="container">
        <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">

            <div id="myTabContent" class="tab-content">
                <div role="tabpanel" class="tab-pane fade active in" id="home" aria-labelledby="home-tab">
                    <div class="w3_agile_featured_movies">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-2 w3l-movie-gride-agile  text-center">

                                <a href="/Movie/Detail/@item.id" class="hvr-shutter-out-horizontal" target="_blank">
                                    <img src=@item.images.small title="album-name" class="img-responsive" alt=" " style="width:168px;height:240px;" />
                                    <div class="w3l-action-icon"><i class="fa fa-play-circle" aria-hidden="true"></i></div>
                                </a>

                                <div class="mid-1 agileits_w3layouts_mid_1_home">
                                    <div class="w3l-movie-text">
                                        <h6><a href="single.html">@item.title</a></h6>
                                    </div>
                                    <div class="mid-2 agile_mid_2_home">
                                        <p>评分：@item.rating.average</p>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="clearfix"> </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- //general -->